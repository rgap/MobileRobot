		if (stopCount < STOP_TIME) {
			stopCount++;
		} else {
			stopCount = 0;
			busy = false;
		}
	}
	*/
}

bool ActionControl::isBusy() {
	return busy;
}

ActionControl::~ActionControl() {
	delete name;
}
