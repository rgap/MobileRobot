#include "ActionControl.h"

using namespace cv;
using namespace std;

ActionControl::ActionControl() {
}

void ActionControl::initialize(std::string devicePath) {
	timeCount = 0;
	stopCount = 0;
	busy = false;

	dev.setDevice(devicePath);
	dev.initializeSerialDevice();

	name = new string[8];
	name[0] = "PARAR";
	name[1] = "AVANZAR";
	name[2] = "RETROCEDER";
	name[3] = "GIRO_DER";
	name[4] = "GIRO_IZQ";
	name[5] = "INICIAL_PALA";
	name[6] = "RECOGER_LATA";
	name[7] = "BUSCAR";
}

void ActionControl::send(char action) {

	cout << "Action : " << name[(int)(action - '1')] << endl;
	(*dev.serialStream) << action;

	(*dev.serialStream) << PARAR;
	/*
	int ACTION_TIME = 100000;
	int STOP_TIME = 100000;

	if (stopCount == 0) {
		if (timeCount < ACTION_TIME) {
			if (!busy) {
				cout << "Action : " << name[(int)(action - '1')] << endl;
				(*dev.serialStream) << action;
			}
			busy = true;
			timeCount++;
		} else {
			cout << "Stop : " << name[(int)(PARAR - '1')] << endl;
			(*dev.serialStream) << PARAR;

			timeCount = 0;
			stopCount++;
		}
